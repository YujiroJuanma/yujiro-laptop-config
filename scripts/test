#!/bin/bash

# Define the reset code
NORMAL=$(tput sgr0)

echo "Displaying all 256 colors available via tput setaf and setab:"

# Loop through all 256 foreground colors (0 to 255)
for i in {0..255}; do
    # Set foreground color 'i' and print the number
    printf "%s%3d " "$(tput setaf $i)" "$i"

    # Print 16 colors per line
    if (( (i + 1) % 16 == 0 )); then
        printf "%s\n" "$NORMAL" # Reset color and add a newline
    fi
done

# Add a final newline and reset to ensure prompt is clean
printf "%s\n" "$NORMAL"
